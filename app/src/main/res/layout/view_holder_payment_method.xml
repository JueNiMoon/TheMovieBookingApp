<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_small">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconCard"
        android:layout_width="@dimen/width_card_icon"
        android:layout_height="@dimen/height_card_icon"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:src="@drawable/ic_baseline_credit_card_gray_24dp" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPaymentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_3"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_toEndOf="@id/iconCard"
        android:text="Internal banking (ATM card)"
        android:textColor="@color/black"
        android:textSize="@dimen/text_regular_2x_18" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvcardtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tvPaymentType"
        android:layout_below="@id/tvPaymentType"
        android:layout_toEndOf="@id/iconCard"
        android:text="Visa, master card, JCB" />
</RelativeLayout>